<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #2c3e50;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.alp.guiswingorderwinalp.LoginController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <children>
        <Label text="RESTAURANTE ALP" textFill="WHITE">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Inicio de Sesión" textFill="#ecf0f1">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        
        <VBox spacing="10.0" maxWidth="300.0">
            <TextField fx:id="userField" promptText="Usuario" style="-fx-background-radius: 5; -fx-padding: 10;" />
            <PasswordField fx:id="passField" promptText="Contraseña" style="-fx-background-radius: 5; -fx-padding: 10;" />
        </VBox>

        <Button fx:id="loginButton" defaultButton="true" onAction="#handleLogin" prefWidth="200.0" style="-fx-background-color: #27ae60; -fx-text-fill: WHITE; -fx-background-radius: 5; -fx-cursor: hand;" text="ENTRAR">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </Button>
    </children>
</VBox>